#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), "..", "lib")
require "git_release_notes"

if __FILE__ == $0
  production_tag, rc_sha, git_web_url = ARGV

  whats_in_the_deploy = WhatsInTheDeploy.new(production_tag, rc_sha, git_web_url)
  whats_in_the_deploy.compare_submodules
  puts whats_in_the_deploy.generate_html(DATA.read)
end

__END__
body {
	font-family: "helvetica neue";
